{
  "name": "rule-of-three",
  "productName": "Rule of Three",
  "version": "0.1.0",
  "private": true,
  "main": "./node_modules/react-native-scripts/build/bin/crna-entry.js",
  "scripts": {
    "mobile": "react-native-scripts start",
    "web": "webpack-dev-server --mode development --allowed-hosts .ngrok.io",
    "start": "npm run web & npm run mobile",
    "test": "jest --bail --coverage",
    "clean": "rimraf dist && rimraf release && mkdirp dist/images/icon && mkdirp release",
    "icon": "cd assets/icon && node ../../scripts/icon original.png",
    "prebuild-web": "npm run clean",
    "build-web": "NODE_ENV=production webpack --mode production",
    "copy-web-icons": "cpy 180.png 192.png 270.png 512.png ../../dist/images/icon --cwd=assets/icon",
    "postbuild-web": "cpy assets/web/* dist && npm run copy-web-icons",
    "premenubar": "npm run build-web && cpy assets/menubar/* dist",
    "menubar": "cd dist && electron .",
    "prebuild-menubar": "rimraf release && npm run premenubar && cd dist && npm install && cd ..",
    "build-menubar": "cd dist && electron-packager . --all --out=../release",
    "prebuild-extension": "npm run build-web",
    "build-extension":
      "zip -r release/extension.zip manifest.json assets dist -x dist/manifest.json assets/web/manifest.json",
    "build-ios": "exp build:ios",
    "build-android": "exp build:android",
    "predeploy-web": "npm run icon && npm run build-web",
    "deploy-web": "gh-pages -d dist",
    "deploy-expo": "exp publish",
    "precommit": "npm test"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "expo": "^26.0.0",
    "react": "16.3.0-alpha.1",
    "react-dom": "16.3.1",
    "react-native": "0.54.0",
    "react-native-easy-toast": "1.1.0",
    "react-native-web": "0.5.4"
  },
  "devDependencies": {
    "babel-loader": "7.1.4",
    "babel-plugin-react-native-web": "0.5.4",
    "cpy-cli": "1.0.1",
    "electron": "1.8.4",
    "electron-packager": "12.0.1",
    "exp": "52.0.3",
    "gh-pages": "1.1.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "jest-expo": "26.0.0",
    "menubar": "5.2.3",
    "mkdirp": "0.5.1",
    "react-native-scripts": "1.13.1",
    "react-test-renderer": "16.3.0-alpha.1",
    "rimraf": "2.6.2",
    "sharp": "0.20.1",
    "sw-precache-webpack-plugin": "0.11.5",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.2"
  }
}
