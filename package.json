{
  "name": "rule-of-three",
  "productName": "Rule of Three",
  "version": "0.1.2",
  "private": true,
  "main": "./node_modules/react-native-scripts/build/bin/crna-entry.js",
  "scripts": {
    "mobile": "expo-cli start",
    "web": "webpack-dev-server --mode development --allowed-hosts .ngrok.io",
    "start": "npm run web & npm run mobile",
    "test": "jest --bail --coverage",
    "clean": "rimraf dist && rimraf release && mkdirp dist/images/icon && mkdirp release",
    "icon": "cd assets/icon && node ../../scripts/icon original.png",
    "prebuild-web": "npm run clean",
    "build-web": "NODE_ENV=production webpack --mode production",
    "copy-web-icons": "cpy 180.png 192.png 270.png 512.png ../../dist/images/icon --cwd=assets/icon",
    "postbuild-web": "cpy assets/web/* dist && cpy assets/privacy-policy/* dist/privacy-policy && npm run copy-web-icons",
    "premenubar": "npm run build-web && cpy assets/menubar/* dist",
    "menubar": "cd dist && electron .",
    "prebuild-menubar": "rimraf release && npm run premenubar && cd dist && npm install && cd ..",
    "build-menubar": "cd dist && electron-packager . --all --out=../release",
    "prebuild-extension": "npm run build-web",
    "build-extension": "zip -r release/extension.zip README.md manifest.json assets/icon dist -x dist/manifest.json assets/web/manifest.json *.DS_Store",
    "build-ios": "expo-cli build:ios",
    "build-android": "expo-cli build:android",
    "predeploy-web": "npm run icon && npm run build-web",
    "deploy-web": "gh-pages -d dist",
    "deploy-expo": "expo-cli publish",
    "precommit": "npm test"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "expo": "30.0.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-native": "0.60.0",
    "react-native-easy-toast": "1.2.0",
    "react-native-web": "0.12.3"
  },
  "devDependencies": {
    "babel-loader": "7.1.5",
    "babel-plugin-react-native-web": "0.9.0",
    "cpy-cli": "1.0.1",
    "electron": "3.0.0",
    "electron-packager": "12.1.2",
    "expo-cli": "2.1.3",
    "gh-pages": "1.1.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "jest-expo": "30.0.0",
    "menubar": "5.2.3",
    "mkdirp": "0.5.1",
    "react-native-scripts": "1.14.1",
    "react-test-renderer": "16.5.2",
    "rimraf": "2.6.2",
    "sharp": "0.20.1",
    "sw-precache-webpack-plugin": "0.11.5",
    "webpack": "4.19.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.11"
  }
}
